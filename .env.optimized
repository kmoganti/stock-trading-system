# Updated Trading System Configuration
# Based on backtest analysis results from October 11, 2025

# Risk Management - Optimized based on 1.5:1 average risk/reward ratio
RISK_PER_TRADE=0.025  # Increased from 0.02 (2%) to 0.025 (2.5%)
MAX_POSITIONS=12      # Increased from 10 for better diversification
MAX_DAILY_LOSS=0.06   # Increased from 0.05 to accommodate higher risk per trade

# Quality Filters - Based on backtest findings
MIN_PRICE=50.0        # Increased from 10.0 to focus on quality stocks
MIN_LIQUIDITY=200000  # Doubled from 100000 for better execution

# Strategy Thresholds - Optimized for 70% average confidence
MIN_CONFIDENCE_THRESHOLD=0.65           # Minimum signal confidence (was hardcoded at 0.5)
VOLUME_CONFIRMATION_MULTIPLIER=0.8      # Relaxed from 0.9 based on successful signals
MOMENTUM_THRESHOLD=0.015                # 1.5% momentum requirement for trend signals
TREND_STRENGTH_MULTIPLIER=1.2           # EMA separation requirement

# Sector Risk Management - New feature based on concentration analysis
MAX_SECTOR_EXPOSURE=0.30                # Maximum 30% allocation to any single sector
ENABLE_SECTOR_DIVERSIFICATION=true      # Enable automatic sector diversification

# Signal Quality Improvements - New filters
REQUIRE_TREND_CONFIRMATION=true         # Must be above EMA50 for bullish signals
PRICE_QUALITY_FILTER=true              # Filter out choppy/low-quality price action

# Existing Configuration (keep as-is)
AUTO_TRADE=false
DRY_RUN=true
SIGNAL_TIMEOUT=300
ALLOW_SHORT_SELLING=true
DEFAULT_BUY_PRODUCT=NORMAL
DEFAULT_SELL_PRODUCT=NORMAL
SHORT_SELL_PRODUCT=INTRADAY
DAY_TRADING_PRODUCT=INTRADAY

# Telegram Notifications
TELEGRAM_BOT_ENABLED=false
TELEGRAM_NOTIFICATIONS_ENABLED=true
TELEGRAM_BACKGROUND_TASKS_ENABLED=false

# System Configuration
ENABLE_SCHEDULER=false
ENABLE_SYSTEM_STATUS_CHECKS=false
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=14

# Database
DATABASE_URL=sqlite+aiosqlite:///./trading_system.db

# Server
HOST=0.0.0.0
PORT=8000

# Security (update these in production)
SECRET_KEY=dev-secret
ACCESS_TOKEN_EXPIRE_MINUTES=30