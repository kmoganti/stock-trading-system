# Optimized Logging Configuration for Trading System
# Copy to .env and customize for your environment

# =============================================================================
# BASIC LOGGING CONFIGURATION
# =============================================================================

# Overall log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Main log file location
LOG_FILE=logs/trading_system.log

# Log retention period (days)
LOG_RETENTION_DAYS=30

# =============================================================================
# ADVANCED LOGGING SETTINGS
# =============================================================================

# Maximum log file size before rotation (MB)
LOG_MAX_FILE_SIZE_MB=25

# Number of backup files to keep
LOG_BACKUP_COUNT=10

# Log format: json, text, or structured
LOG_FORMAT=json

# Enable console logging (true/false)
LOG_CONSOLE_ENABLED=true

# =============================================================================
# COMPONENT-SPECIFIC LOG LEVELS
# =============================================================================

# Trading operations logging
LOG_LEVEL_TRADES=INFO

# API calls logging (can be noisy, set to WARNING for production)
LOG_LEVEL_API=WARNING

# Risk management logging
LOG_LEVEL_RISK=INFO

# Strategy execution logging
LOG_LEVEL_STRATEGY=INFO

# Data fetching logging (can be very noisy)
LOG_LEVEL_DATA=WARNING

# =============================================================================
# PERFORMANCE LOGGING
# =============================================================================

# Enable performance monitoring
ENABLE_PERFORMANCE_LOGGING=true

# Log operations slower than this threshold (milliseconds)
PERFORMANCE_THRESHOLD_MS=1000

# Log slow database queries
LOG_SLOW_QUERIES=true

# Slow query threshold (milliseconds)
SLOW_QUERY_THRESHOLD_MS=500

# =============================================================================
# CRITICAL EVENTS LOGGING
# =============================================================================

# Enable critical events logging (orders, signals, P&L, risks)
ENABLE_CRITICAL_EVENTS=true

# Immediately flush critical events to disk (recommended for production)
CRITICAL_EVENTS_IMMEDIATE_FLUSH=true

# Maximum size for critical events log (MB)
CRITICAL_EVENTS_MAX_SIZE_MB=50

# =============================================================================
# LOG SAMPLING AND RATE LIMITING
# =============================================================================

# Enable log sampling to reduce volume in high-frequency scenarios
ENABLE_LOG_SAMPLING=false

# Sample rate (0.0-1.0, where 1.0 = log everything)
LOG_SAMPLE_RATE=1.0

# API log rate limit (messages per minute)
API_LOG_RATE_LIMIT=100

# =============================================================================
# STRUCTURED LOGGING CONTEXT
# =============================================================================

# Include hostname in logs
LOG_INCLUDE_HOSTNAME=true

# Include process ID in logs
LOG_INCLUDE_PROCESS_ID=true

# Include thread ID in logs (can be noisy)
LOG_INCLUDE_THREAD_ID=false

# Header for correlation ID tracking
LOG_CORRELATION_ID_HEADER=X-Correlation-ID

# =============================================================================
# ERROR TRACKING AND AGGREGATION
# =============================================================================

# Enable error aggregation to reduce duplicate error logs
ENABLE_ERROR_AGGREGATION=true

# Time window for error aggregation (minutes)
ERROR_AGGREGATION_WINDOW_MINUTES=5

# Maximum length of error details in logs
MAX_ERROR_DETAILS_LENGTH=2048

# =============================================================================
# ENVIRONMENT-SPECIFIC RECOMMENDATIONS
# =============================================================================

# DEVELOPMENT ENVIRONMENT:
# LOG_LEVEL=DEBUG
# LOG_CONSOLE_ENABLED=true
# ENABLE_LOG_SAMPLING=false
# LOG_LEVEL_API=INFO
# LOG_LEVEL_DATA=INFO

# TESTING ENVIRONMENT:
# LOG_LEVEL=INFO
# LOG_CONSOLE_ENABLED=true
# ENABLE_LOG_SAMPLING=false
# CRITICAL_EVENTS_IMMEDIATE_FLUSH=false

# PRODUCTION ENVIRONMENT:
# LOG_LEVEL=INFO
# LOG_CONSOLE_ENABLED=false
# ENABLE_LOG_SAMPLING=true
# LOG_SAMPLE_RATE=0.8
# LOG_LEVEL_API=WARNING
# LOG_LEVEL_DATA=ERROR
# CRITICAL_EVENTS_IMMEDIATE_FLUSH=true
# LOG_MAX_FILE_SIZE_MB=50
# LOG_RETENTION_DAYS=90

# HIGH-FREQUENCY TRADING:
# ENABLE_LOG_SAMPLING=true
# LOG_SAMPLE_RATE=0.1
# API_LOG_RATE_LIMIT=50
# PERFORMANCE_THRESHOLD_MS=100
# LOG_LEVEL_API=ERROR
# LOG_LEVEL_DATA=ERROR